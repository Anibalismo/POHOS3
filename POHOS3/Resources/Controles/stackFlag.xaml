<UserControl x:Class="POHOS3.Resources.Controles.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POHOS3.Resources.Controles"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Content="Flag 1" Height="30" Click="Button_Click" HorizontalAlignment="Right" Margin="0,8,0,7" Width="30"/>
        <Label Name="lbDescripcion"  Grid.Column="1" VerticalAlignment="Center"/>
        <StackPanel Grid.Column="2">
            <RadioButton Content="No realizada"/>
            <RadioButton Content="Finalizó ok"/>
            <RadioButton Content="Prueba falló"/>
        </StackPanel>
    </Grid>
</UserControl>
